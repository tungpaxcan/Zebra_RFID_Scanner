@model CollTex.Models.Color
@{
    ViewBag.Title = Html.DisplayName(CollTex.Resources.Resource.editcolor);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input hidden value="@Model.Id" id="id" />
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            @Html.DisplayName(CollTex.Resources.Resource.editcolor)
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    @Html.DisplayName(CollTex.Resources.Resource.pleaseenteralldatacorrectlytoensuresystem)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label"> @Html.DisplayName(CollTex.Resources.Resource.name)<span style="color:red"> (*) </span></label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="input-group ">
                    <input class="form-control" type="text" placeholder=" @Html.DisplayName(CollTex.Resources.Resource.name)" id="name" value="@Model.Name" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2">
            </div>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <button type="submit" class="btn btn-primary mr-2" onclick="Edit()"> @Html.DisplayName(CollTex.Resources.Resource.savechanges)</button>
                <a href="/Color/Index" type="reset" class="btn btn-secondary"> @Html.DisplayName(CollTex.Resources.Resource.cancel)</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        //----------------Edit::Unit---------------------
        function Edit() {
            try {
                var name = $('#name').val().trim();
                var id = $('#id').val().trim();
                if (name.length <= 0) {
                    toastr.warning("", "@Html.DisplayName(CollTex.Resources.Resource.nonamesentered) !!!"); $('#name').css('border-color', "red"); return;
                    return;
                } else { $('#name').css('border-color', "green") }
                $.ajax({
                    url: '/color/Edit',
                    type: 'post',
                    data: {
                        id, name
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            Swal.fire({
                                title: data.msg,
                                icon: "success",
                                buttonsStyling: false,
                                confirmButtonText: `<a style="color:white" href="/Color/Index">@Html.DisplayName(CollTex.Resources.Resource.confirm)</a>`,
                                customClass: {
                                    confirmButton: "btn btn-primary"
                                }
                            });
                        }
                        else {
                             Swal.fire(data.msg,"@Html.DisplayName(CollTex.Resources.Resource.pressthebutton)","error")
                        }
                    },
                })
            } catch (error) {
                Swal.fire(error.message, "", "error")
            }

        }
    </script>
}


