
@{
    ViewBag.Title = @Html.DisplayName(CollTex.Resources.Resource.moreaccount);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            @Html.DisplayName(CollTex.Resources.Resource.moreaccount)
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-text"> @Html.DisplayName(CollTex.Resources.Resource.pleaseenteralldatacorrectlytoensuresystem)</div>
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    @Html.DisplayName(CollTex.Resources.Resource.swipetoseedescription)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.name)<span style="color:red"> (*) </span></label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="input-group ">
                    <input class="form-control" type="text" placeholder="@Html.DisplayName(CollTex.Resources.Resource.name)" id="name" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.accountname)<span style="color:red"> (*) </span></label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="input-group ">
                    <input class="form-control" type="text" placeholder="@Html.DisplayName(CollTex.Resources.Resource.accountname)" id="userName" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.password)<span style="color:red"> (*) </span></label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="input-group ">
                    <input class="form-control" type="password" placeholder="@Html.DisplayName(CollTex.Resources.Resource.password)" id="password" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">FX<span style="color:red"> (*) </span></label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <select class="form-control" id="fx">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.manage)</label>
            <label type="button" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2" data-toggle="tooltip" title="@Html.DisplayName(CollTex.Resources.Resource.doestheaccounthavemanagementrights)">
                <i class="flaticon-warning text-primary"></i>
            </label>
            <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
                <label class="checkbox checkbox-success">
                    <input type="checkbox" name="Checkboxes5" id="authorities" checked="">
                    <span></span>@Html.DisplayName(CollTex.Resources.Resource.status)
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.operationstatus)</label>
            <label type="button" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2" data-toggle="tooltip" title="@Html.DisplayName(CollTex.Resources.Resource.statusshowaccountactivitystatus)">
                <i class="flaticon-warning text-primary"></i>
            </label>
            <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
                <label class="checkbox checkbox-success">
                    <input type="checkbox" name="Checkboxes5" id="status" checked="checked">
                    <span></span>@Html.DisplayName(CollTex.Resources.Resource.status)
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2 col-form-label">@Html.DisplayName(CollTex.Resources.Resource.description)</label>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="input-group ">
                    <textarea class="form-control" type="text" placeholder="@Html.DisplayName(CollTex.Resources.Resource.description)" id="des"></textarea>
                </div>
            </div>
        </div>
    </div>

    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-xxl-2">
            </div>
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <button type="submit" class="btn btn-primary mr-2" onclick="Add()">@Html.DisplayName(CollTex.Resources.Resource.save)</button>
                <a href="/Register/ListUser" type="reset" class="btn btn-secondary">@Html.DisplayName(CollTex.Resources.Resource.cancel)</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

        $(function FX() {
            try {
            $.ajax({
                url: '/FXconnect/FX',
                type: 'get',
                success: function (data) {
                    $('#fx').empty()
                    if (data.code == 200) {
                        let table = '<option value="-1">@Html.DisplayName(CollTex.Resources.Resource.choosefx)</option>'
                        $.each(data.a, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#fx').append(table);
                    } else {
                        Swal.fire(data.msg,"@Html.DisplayName(CollTex.Resources.Resource.pressthebutton)","error")
                    }
                },
            })
            } catch (error) {
                Swal.fire(error.message, "", "error")
            }
        })

        function Add() {
            var name = $('#name').val().trim();
            var fx = $('#fx').val()
            var userName = $('#userName').val();
            var password = $('#password').val().trim();
            let des = $('#des').val().trim();
            let status = $('#status').is(":checked");
            let authorities = $('#authorities').is(":checked");
            if (name.length == 0) {
                toastr.warning("", "@Html.DisplayName(CollTex.Resources.Resource.usernamenotentered) !!!"); $('#name').css('border-color', "red"); return;
            } else { $('#name').css('border-color', "green") }
            if (userName.length < 5) {
                 toastr.warning("", "@Html.DisplayName(CollTex.Resources.Resource.accountnamemustbelongerthan6characters) !!!");$('#userName').css('border-color', "red"); return;
            } else { $('#userName').css('border-color', "green") }
            if (password.length < 6) {
                   toastr.warning("", "@Html.DisplayName(CollTex.Resources.Resource.passwordmustbemorethan6characters) !!!"); $('#password').css('border-color', "red"); return;
            } else { $('#password').css('border-color', "green") }
             if (fx == -1) {
                toastr.warning("", "@Html.DisplayName(CollTex.Resources.Resource.haventselectedfx) !!!"); $('#fx').css('border-color', "red"); return;
            } else { $('#fx').css('border-color', "green") }
            $.ajax({
                url: '/Register/Add',
                type: 'post',
                data: {
                    name, userName, password,fx, des, status, authorities
                },
                success: function (data) {
                    if (data.code == 200) {
                        Swal.fire({
                            title: data.msg,
                            icon: "success",
                            buttonsStyling: false,
                            confirmButtonText: `<a style="color:white" href="/Register/ListUser">@Html.DisplayName(CollTex.Resources.Resource.confirm)</a>`,
                            customClass: {
                                confirmButton: "btn btn-primary"
                            }
                        });
                    } else {
                        Swal.fire(data.msg,"@Html.DisplayName(CollTex.Resources.Resource.pressthebutton)","error")
                    }
                },
            })
        }
    </script>

}

